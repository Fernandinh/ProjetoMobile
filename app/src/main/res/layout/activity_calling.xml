<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallingActivity">

    <ImageView
        android:id="@+id/profile_image_calling"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/nome_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt"
        android:layout_marginBottom="-2dp"
        android:gravity="center"
        android:maxLines="5"
        android:text="Nome"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:text="Ligando..."
        android:textSize="20dp"
        android:maxLines="5"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:layout_above="@id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:orientation="horizontal"
       android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/make_call"
        android:src="@drawable/make_call"
        android:layout_marginRight="70dp"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <ImageView
        android:id="@+id/cancel_call"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/cancel_call" />

    </LinearLayout>

</RelativeLayout>