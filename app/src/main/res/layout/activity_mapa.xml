<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

        android:src="@drawable/ic_magnify"/>

    <SearchView
        android:id="@+id/input_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"
        android:hint="Coloque um EndereÃ§o"
        android:imeOptions="actionSearch"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/lupAumentar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lupaumentar" />

    <ImageView
        android:id="@+id/lupaDiminuir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lupAumentar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lupadiminuir" />








</RelativeLayout>